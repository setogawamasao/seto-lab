extends _layout.pug

block locals

block content
    .main
        .wrapper
            include _menu.pug
            .main__text
                h1.main__text-h1
                    img(src="../images/top/main_title.png", alt="SETO-LAB")
                p.main__text-p
                    img(src="../images/top/main_title_txt.png", alt="Masao Setogawa's Portfolio")
            .main__border.scrolldown1
                span Scroll
    section#portfolio
        .about
            .content
                .about__contents.about__contents-01
                    .wrapper
                        .ttl
                            h2
                                img(src="../images/title/ttl_portfolio.png", alt="Portfolio")
                        .box.box-left
                            h3
                                |ARPR
                            p.h3-caption
                                |iosのARアプリ
                                <br>空間に文字を表示させて、触れることで文字を変えることができる
                                <br>TicToKの自己紹介動画を簡単に作ることできる

                        .box.box-right
                            img(src="../images/arpr/arpr.gif", alt="ARPR")
                .about__contents.about__contents-01
                    .wrapper
                        .box.box-left
                            h3
                                |サステナブル・タピオカ
                            p.h3-caption
                                |物理エンジンと加速度センサーでタピオカを再現
                        .box.box-right
                            img(src="../images/sustapi/sustapi.gif", alt="サステナブル・タピオカ")
                .about__contents.about__contents-01
                    .wrapper
                        .box.box-left
                            h3
                                |誰でもジャック・ニコルソン
                            p.h3-caption
                                |顔認証の技術を使って、映画シャイニングの名場面を再現
                        .box.box-right
                            img(src="../images/nicolson/nicolson.gif", alt="誰でもジャック・ニコルソン")
    section#skills
        .wrapper
            .ttl
                h2
                    img(src="../images/title/ttl_skills.png", alt="Skills")
            .content
                .box.box-left
                    table
                        tr
                            th Coding languages
                        tr
                            td HTML/CSS, Javascript, Typescript, C#, PHP, Swift, VB, VBA
                        tr
                            th Database
                        tr
                            td Oracle Database, Microsoft SQL Server, MySQL ,PostgreSQL, Access
                        tr
                            th Middleware
                        tr
                            td Node.js, Vue, Nuxt.js, React, Next.js, Docker
                        tr
                            th Others
                        tr
                            td Git, Subversion(SVN)

    section#about
        .wrapper
            .ttl
                h2
                    img(src="../images/title/ttl_about.png", alt="About")
            .content
                .box.box-left
                    h3
                        img(src="../images/about/producer_txt01.png", alt="瀬戸川 将夫")
