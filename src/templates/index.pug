                    img(src="../images/sns-logos/twitter_80.png",width="40", alt="twitter")
                    img(src="../images/sns-logos/instagram_80.png",width="40", alt="instagram")
                    img(src="../images/sns-logos/tiktok_80.png",width="40", alt="tiktok")
                    img(src="../images/sns-logos/youtube_80.png",width="40", alt="youtube")
                    img(src="../images/sns-logos/github_80.png",width="40", alt="github")
                    img(src="../images/sns-logos/note_80.png",width="40", alt="note")
                    table
                        tr
                            th 2013年
                        tr
                            td 電気通信大学電気通信学部知能機械工学科卒業
                        tr
